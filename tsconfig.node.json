{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite/**/*.ts",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "exclude": ["**/node_modules/*", "**/.pnpm/*", "node_modules", "**/*.test.ts", "**/test/**/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": false,

    "module": "ES6",
    "moduleResolution": "bundler",
    "types": ["node"]
  }
}
